{
  "name": "forgekitlauncher",
  "version": "0.4.0",
  "description": "ForgeKit Game Launcher",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.thenebulo.forgekitlauncher",
    "productName": "ForgeKit Launcher",
    "copyright": "Copyright Â© 2024 Amir Djaffar (TheNebulo)",
    "directories": {
      "output": "dist"
    },
    "dmg": {
      "background": null,
      "backgroundColor": "#ffffff",
      "window": {
        "width": 400,
        "height": 300
      },
      "contents": [
        {
          "x": 100,
          "y": 100
        },
        {
          "x": 300,
          "y": 100,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://twilightdev.replit.app/updates"
      }
    ]
  },
  "author": "Amir Djaffar (TheNebulo)",
  "license": "ISC",
  "devDependencies": {
    "electron": "^30.1.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "electron-updater": "^6.2.1",
    "unzipper": "^0.12.1"
  }
}